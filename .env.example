# Database Configuration
DATABASE_URL=postgres://inventory_user:inventory_pass@localhost:5432/inventory_saas

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRATION=3600        # 1 hour in seconds
JWT_REFRESH_TOKEN_EXPIRATION=2592000   # 30 days in seconds

# Server Configuration
HOST=0.0.0.0
PORT=8000
RUST_LOG=info,axum=debug,sqlx=debug

# Casbin Configuration
CASBIN_MODEL_PATH=./shared/auth/casbin_model.conf

# Encryption Keys (for sensitive data like integration credentials)
ENCRYPTION_KEY=your-encryption-key-32-bytes-minimum-change-this

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# Feature Flags (optional)
ENABLE_SWAGGER=true
ENABLE_METRICS=false
