# Database Configuration
DATABASE_URL=postgres://inventory_user:inventory_pass@localhost:5432/inventory_saas

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRATION=3600        # 1 hour in seconds
JWT_REFRESH_TOKEN_EXPIRATION=2592000   # 30 days in seconds

# Server Configuration
HOST=0.0.0.0
PORT=8000
RUST_LOG=info,axum=debug,sqlx=debug

# Casbin Configuration
CASBIN_MODEL_PATH=./shared/auth/casbin_model.conf

# Encryption Keys (for sensitive data like integration credentials)
ENCRYPTION_KEY=your-encryption-key-32-bytes-minimum-change-this

# CORS Configuration (comma-separated origins)
# For multi-tenant support with subdomains, add each tenant subdomain:
# CORS_ORIGINS=http://localhost:5173,http://acme.localhost:5173,http://demo.localhost:5173
# Note: Wildcard origins require credentials=false. List specific origins for cookie auth.
CORS_ORIGINS=http://localhost:8000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# Feature Flags (optional)
ENABLE_SWAGGER=true
ENABLE_METRICS=false

# KeyDB Configuration (Redis-compatible cache and sessions)
# KeyDB is a high-performance, multi-threaded Redis alternative
KEYDB_URL=redis://localhost:6379
# Legacy alias - keep in sync with KEYDB_URL
REDIS_URL=redis://localhost:6379

# NATS Configuration (for event streaming)
NATS_URL=nats://localhost:4222

# RustFS Configuration (S3-compatible object storage)
RUSTFS_ENDPOINT=http://localhost:9000
RUSTFS_ACCESS_KEY=rustfsadmin
RUSTFS_SECRET_KEY=rustfsadmin
RUSTFS_BUCKET_NAME=anthill-files
RUSTFS_REGION=us-east-1

# S3 compatibility aliases (for existing code using S3 SDK)
# Keep in sync with RUSTFS_ACCESS_KEY/RUSTFS_SECRET_KEY
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=rustfsadmin
S3_SECRET_KEY=rustfsadmin
S3_BUCKET_NAME=anthill-files

# SSL/TLS Configuration (for Nginx, not application services)
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# Monitoring Configuration
METRICS_PORT=9090
HEALTH_CHECK_PORT=8080

# Email/SMTP Configuration (for email verification and password reset)
# Leave SMTP_HOST empty to disable email sending (emails will be logged instead)
SMTP_HOST=smtp.resend.com
SMTP_PORT=465
SMTP_USERNAME=resend
SMTP_PASSWORD=re_PMtNeZhm_9CakFT34prbZKyeyNNSpYTZYts
SMTP_FROM_EMAIL=noreply@your-domain.co
SMTP_FROM_NAME=Anthill
SMTP_TLS=true

# Email Verification Configuration
VERIFICATION_BASE_URL=http://localhost:5173
VERIFICATION_EXPIRY_HOURS=24

# Feature Flags
ENABLE_OAUTH2=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_FILE_UPLOAD=true

# Database Connection Pool
DB_MAX_CONNECTIONS=10
DB_MIN_CONNECTIONS=2
DB_CONNECT_TIMEOUT=30
DB_IDLE_TIMEOUT=300

# Cache Configuration
CACHE_TTL=3600
SESSION_TTL=604800
